<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <include
        layout="@layout/tab_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/coordinatorLayout"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            style="@style/Widget.MaterialComponents.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            app:fabAlignmentMode="center"
            app:fabAnimationMode="slide"
            app:hideOnScroll="true"
            app:itemIconSize="@dimen/icon_size">

            <RelativeLayout
                style="@style/Widget.MaterialComponents.BottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin">


                <LinearLayout
                    android:id="@+id/ridesLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivOne"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/activity_tiny_margin"
                        android:layout_marginBottom="@dimen/activity_tiny_margin"
                        android:contentDescription="@string/ride"
                        android:src="@mipmap/ic_car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/ride" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/accountLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivTwo"
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/activity_tiny_margin"
                        android:layout_marginBottom="@dimen/activity_tiny_margin"
                        android:contentDescription="@string/account"
                        android:src="@mipmap/ic_person"
                        app:tint="@color/primaryColour" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/account" />
                </LinearLayout>
            </RelativeLayout>

        </com.google.android.material.bottomappbar.BottomAppBar>

        <include
            android:id="@+id/fabSubmenuCV"
            layout="@layout/fab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_100"
            android:visibility="gone"
            app:layout_anchor="@id/rideFAB"
            app:layout_anchorGravity="top|center" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/rideFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="center"
            app:layout_anchor="@id/bottomAppBar"
            app:maxImageSize="@dimen/design_fab_size_normal"
            app:srcCompat="@mipmap/ic_ride"
            app:tint="@null" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
