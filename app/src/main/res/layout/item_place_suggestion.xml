<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_place_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/ll_place_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/margin_small"
        android:paddingEnd="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_place_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size"
            android:fontFamily="@font/gothicbold"
            android:paddingBottom="@dimen/activity_margin_half"
            android:text="Juan Scher"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/tv_place_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size"
            android:fontFamily="@font/gothicregular"
            android:text="Juan Scher"
            android:textColor="@color/black"
            android:textSize="@dimen/normal_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/activity_margin_half"
            android:background="@color/material_gray_200" />
    </LinearLayout>

</androidx.cardview.widget.CardView>