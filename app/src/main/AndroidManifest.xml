<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rytryde">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RytRyde">
        <activity
            android:name=".LocationActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--              The API key for Google Maps-based APIs. -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity android:name=".RideActivity">

        </activity>
        <activity
            android:name=".ContactUsActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".FAQActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".TermsAndConditionsActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".WhoWeAreActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".PrivacyPolicyActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />

        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.RytRyde.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyPhonebookActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar">

        </activity>
        <activity
            android:name=".CompleteDetailsActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".VerifyMobileActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".AddVehicleDetailsActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity
            android:name=".EditProfileActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity android:name=".CreateGroupActivit" />
        <activity android:name=".OTPActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".ResetPassword" />
        <activity android:name=".MyContactActivity">

        </activity>
        <activity android:name=".MyGroupActivity" />
        <activity
            android:name=".MyVehicleActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
        <activity android:name=".GroupMemberListingActivity" />
        <activity android:name=".SignInActivity">

        </activity>
        <activity
            android:name=".OnboarderActivity"
            android:label="@string/title_activity_onboarder"
            android:theme="@style/Theme.RytRyde.NoActionBar" />


        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.RytRyde.NoActionBar" />
    </application>

</manifest>